<%- include('partials/header') %> 
<link rel="stylesheet" href="/CSS/dashboard.css">
<div class="jumbotron">
    <div class="container">
        <h2>
            Welcome <%= user.name %> 
        </h2>
        <a href="/logout "><button class="btn btn-primary">Log Out</button></a>
    </div>

    <div class="container" style="max-width: 500px;">
        <h1 class="text-center text-primary">Donation details</h1>
        <form action="/blood" method="POST">
            <div class="form-group">
                <label for="bagNumber">Bag Number</label>
                <input class="form-control" type="text" id="bagNumber" name="bagNumber" placeholder="Bag Number" required>
            </div>
            <div class="form-group">
                <label for="donorId">Donor Id</label>
                <input class="form-control" type="text" id="donorId" name="donorId" placeholder="Donor Id" required>
            </div>
            <div class="form-group">
                <label for="type">Blood Group</label>
                <input class="form-control" type="text" id="type" name="type" placeholder="Blood Group" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location" placeholder="Location" required>
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
<%- include('partials/footer') %> 